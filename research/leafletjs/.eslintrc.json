{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "jsx": true,
    "sourceType": "module"
  },
  "plugins": ["flowtype", "prettier", "react"],
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_" }],
    "prettier/prettier": [
      "error",
      {
        "jsxBracketSameLine": true,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
